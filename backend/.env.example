# Environment Configuration Template
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5001

# Database Configuration
DB_HOST=localhost
DB_PORT=3307
DB_USER=legal_app_user
DB_PASSWORD=ROOT
DB_NAME=legal_education_mysql5

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# API Configuration
API_URL=http://localhost:5001

# ============================================
# Phase 2: Video System Configuration
# ============================================

# Hetzner Object Storage (S3-Compatible)
# Enable/disable Hetzner storage
ENABLE_HETZNER=false

# Hetzner credentials (required if ENABLE_HETZNER=true)
HETZNER_ENDPOINT=https://your-region.your-objectstorage.com
HETZNER_REGION=fsn1
HETZNER_ACCESS_KEY=your-access-key-id
HETZNER_SECRET_KEY=your-secret-access-key
HETZNER_BUCKET=clinique-videos

# Video System Configuration
# Default storage type: 'local' or 'hetzner'
DEFAULT_STORAGE_TYPE=local

# Token configuration
VIDEO_TOKEN_LIFETIME=1800         # 30 minutes in seconds
VIDEO_URL_EXPIRATION=900          # 15 minutes in seconds
TOKEN_REFRESH_THRESHOLD=0.8       # Refresh at 80% of lifetime
MAX_TOKEN_REFRESHES_PER_HOUR=10   # Rate limit for token refresh

# HLS Configuration
ENABLE_HLS=false                  # Enable HLS streaming support
DEFAULT_SEGMENT_DURATION=10       # HLS segment duration in seconds

# Storage Paths
VIDEO_BASE_PATH=videos
HLS_BASE_PATH=hls
THUMBNAIL_BASE_PATH=thumbnails
