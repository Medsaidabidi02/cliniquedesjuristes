# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
DATABASE_URL=mysql://user:password@localhost:3306/database_name

# Security
JWT_SECRET=your-jwt-secret-key
VIDEO_SECRET=your-video-secret-key
JWT_EXPIRES_IN=24h

# File Upload
MAX_FILE_SIZE=5120
UPLOAD_PATH=./uploads

# URLs
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5001
BASE_URL=http://localhost:5001

# Wasabi S3 Configuration (for video storage)
# If these are not set, the system will fall back to local storage
WASABI_ACCESS_KEY=your-wasabi-access-key
WASABI_SECRET_KEY=your-wasabi-secret-key
WASABI_BUCKET_NAME=my-educational-platform
WASABI_REGION=eu-central-1
WASABI_ENDPOINT=https://s3.eu-central-1.wasabisys.com
CDN_DOMAIN=cdn.cliniquedesjuristes.com

# Admin Credentials
DEFAULT_ADMIN_EMAIL=admin@cliniquejuriste.com
DEFAULT_ADMIN_PASSWORD=admin123
