{
  "name": "clinique-juristes-backend",
  "version": "1.0.0",
  "description": "Backend API for Clinique des Juristes",
  "main": "dist/server.js",
  "proxy": "http://localhost:5001",


    "scripts": {
      "start": "node dist/server.js",
      "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
      "dev:simple": "ts-node src/server.ts",
      "build": "tsc",
      "build:prod": "npm run build && copyfiles \"uploads/**/*\" dist && copyfiles \".env.production\" dist",
      "postbuild": "copyfiles \"uploads/**/*\" dist"
    },
  
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.8.1",
    "fs-extra": "^11.3.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.5",
    "path": "^0.12.7",
    "sharp": "^0.34.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/fs-extra": "^11.0.4",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.13",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
